<div class="box-body max-width-800">
    <div class="form-group">
        <label class="col-sm-4 control-label">
            <span class="text-danger">*</span>
            名称
        </label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="name" value="$!field.getName()" placeholder="名称" required />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">
            <span class="text-danger">*</span>
            系统名
        </label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="alias" value="$!field.getAlias()" placeholder="系统名" required />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">
            <span class="text-danger">*</span>
            系统值
        </label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="value" value="$!field.getValue()" placeholder="系统值" required />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">
            描述
        </label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="remark" value="$!field.getRemark()" placeholder="描述" />
        </div>
    </div>
    #if($msg)
    <div class="form-group">
        <label class="col-sm-4 control-label"></label>
        <div class="col-sm-8 text-danger">
            $msg
        </div>
    </div>
    #end
</div>